<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    app:strokeWidth="1dp"
    app:strokeColor="#E0E0E0">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Tipo de Constancia -->
        <TextView
            android:id="@+id/tvTipoConstancia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Estudios"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#1976D2"
            android:paddingBottom="4dp" />

        <!-- Nombre -->
        <TextView
            android:id="@+id/tvNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Juan Pérez García"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:paddingBottom="4dp" />

        <!-- Número de Control -->
        <TextView
            android:id="@+id/tvNoControl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No. Control: 123456789"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:paddingBottom="2dp" />

        <!-- Especialidad -->
        <TextView
            android:id="@+id/tvEspecialidad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Especialidad: Programación"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:paddingBottom="2dp" />

        <!-- Grado y Grupo -->
        <TextView
            android:id="@+id/tvGradoGrupo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Grado: 3° Grupo: A"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:paddingBottom="4dp" />

        <!-- Separador -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" />

        <!-- Fecha y Número de Oficio -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvFecha"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="23/11/2024"
                android:textSize="12sp"
                android:textColor="@android:color/darker_gray" />

            <TextView
                android:id="@+id/tvNumeroOficio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Oficio: 125"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#4CAF50" />
        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>